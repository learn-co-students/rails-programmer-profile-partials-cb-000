<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, root_path %>

<h3>
  <%= programmer.name %> | <%= formatted_date(programmer.birth_date) %> - <%= formatted_date(programmer.death_date) %>
</h3>

<div class="row jumbotron">

  <div class="col-md-3">
    <%= image_tag programmer.image, height: '250px', class:"profile-image" %>
  </div>

  <div class="col-md-9 programmer-info">

    <%= render partial: 'programmers/attribute', locals:{programmer: programmer, attribute: programmer.send(:home_country), string: "Home Country:" } %>
    <%= render partial: 'programmers/attribute', locals:{programmer: programmer, attribute: programmer.send(:quote), string: "Quote:" } %>
    <%= render partial: 'programmers/attribute', locals:{programmer: programmer, attribute: programmer.send(:claim_to_fame), string: "Claim To Fame:" } %>






    <p>
    <%= link_to "Learn more about #{programmer.name}", programmer.wikipedia_page, target: '_blank' %>
    </p>

  </div>
</div>
